#include <iostream>
using namespace std;

int main() {
    const int DAYS = 30;
    double temperatures[DAYS];

    // Input temperatures for 30 days
    cout << "Enter temperatures for 30 days:\n";
    for (int i = 0; i < DAYS; i++) {
        cout << "Day " << i + 1 << ": ";
        cin >> temperatures[i];
    }

    // Find the minimum temperature
    double minTemp = temperatures[0];
    for (int i = 1; i < DAYS; i++) {
        if (temperatures[i] < minTemp) {
            minTemp = temperatures[i];
        }
    }

    // Display the minimum temperature
    cout << "\nThe minimum temperature of the month is: " << minTemp << "Â°C" << endl;

    return 0;
}
