#include <iostream>
using namespace std;

int main() {
    // Declare variables
    float marks[5];
    float total = 0.0, percentage;

    // Input marks for 5 subjects
    cout << "Enter marks for 5 subjects: " << endl;
    for (int i = 0; i < 5; i++) {
        cout << "Subject " << (i + 1) << ": ";
        cin >> marks[i];

        // Validate input: marks should be between 0 and 100
        if (marks[i] < 0 || marks[i] > 100) {
            cout << "Invalid input. Marks should be between 0 and 100." << endl;
            i--; // ask for input again
            continue;
        }

        total += marks[i]; // Add marks to total
    }

    // Calculate percentage
    percentage = (total / 500) * 100;

    // Display results
    cout << "\nTotal Marks: " << total << " / 500" << endl;
    cout << "Percentage: " << percentage << "%" << endl;

    return 0;
}
